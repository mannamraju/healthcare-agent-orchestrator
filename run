#!/bin/bash
# Healthcare Agent Orchestrator - Universal Launcher
# This script detects the environment and runs the appropriate launcher

# Detect if running in PowerShell
if [ -n "$PSVersionTable" ] || [ -n "$PWSH_ROOT" ] || [ "$SHELL" = *"pwsh"* ]; then
    # PowerShell environment detected
    pwsh -NoProfile -ExecutionPolicy Bypass -File "./run.ps1"
else
    # Bash environment detected
    bash ./run.sh
fi
